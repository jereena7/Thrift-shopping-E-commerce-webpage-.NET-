@model ThriftShop.Models.RegisterModel

@{
    ViewData["Title"] = "Register";
}

<style>
    /* Red and Black Background */
    body {
        background: linear-gradient(rgba(0, 0, 0, 0.9), rgba(40, 0, 0, 0.8)), url('https://img.freepik.com/premium-photo/dark-black-abstract-modern-background-ai-generated_406939-8850.jpg');
        background-size: cover;
        background-position: center;
        background-attachment: fixed;
        margin: 0;
        padding: 0;
        font-family: 'Poppins', sans-serif;
        color: #e0e0e0;
    }

    /* Centered Form */
    .register-container {
        display: flex;
        justify-content: center;
        align-items: flex-start;
        min-height: 100vh;
        padding-top: 50px;
    }

    /* Form Box with Red Accents */
    .register-box {
        background: rgba(20, 20, 20, 0.95);
        padding: 35px;
        border-radius: 10px;
        box-shadow: 0 10px 30px rgba(209, 0, 0, 0.2);
        width: 380px;
        text-align: center;
        border: 1px solid #d10000;
    }

    .register-title {
        font-size: 24px;
        font-weight: bold;
        color: #ffffff;
        margin-bottom: 10px;
        text-shadow: 0 2px 4px rgba(209, 0, 0, 0.3);
    }

    .form-label {
        font-weight: bold;
        color: #ffffff;
        text-align: left;
        display: block;
        margin-bottom: 8px;
    }

    .form-control {
        padding: 12px;
        font-size: 16px;
        border-radius: 5px;
        background-color: #1a1a1a;
        border: 1px solid #333;
        color: #ffffff;
        width: 100%;
        margin-bottom: 5px;
        transition: all 0.3s;
    }

        .form-control:focus {
            border-color: #d10000;
            box-shadow: 0 0 0 3px rgba(209, 0, 0, 0.3);
            outline: none;
        }

    .text-danger {
        font-size: 14px;
        color: #ff6b6b;
        margin-top: 5px;
        display: block;
        text-align: left;
    }

    /* Red Gradient Button */
    .btn-primary {
        background: linear-gradient(135deg, #d10000, #b30000);
        color: white;
        border: none;
        padding: 14px;
        font-size: 16px;
        font-weight: bold;
        border-radius: 5px;
        margin-top: 15px;
        width: 100%;
        cursor: pointer;
        transition: all 0.3s;
        box-shadow: 0 4px 8px rgba(209, 0, 0, 0.3);
    }

        .btn-primary:hover {
            background: linear-gradient(135deg, #ff0000, #d10000);
            transform: translateY(-2px);
            box-shadow: 0 6px 12px rgba(209, 0, 0, 0.4);
        }

    /* Footer Link */
    .register-footer {
        margin-top: 20px;
        font-size: 14px;
        color: #b0b0b0;
    }

    .register-link {
        color: #ff4d4d;
        font-weight: 600;
        text-decoration: none;
        transition: color 0.3s;
    }

        .register-link:hover {
            color: #ff0000;
            text-decoration: underline;
        }

    /* Responsive Design */
    @@media (max-width: 450px) {
        .register-box {
            width: 90%;
            padding: 25px;
            margin: 20px auto;
        }

        .register-title {
            font-size: 22px;
        }
    }
</style>

<div class="register-container">
    <div class="register-box">
        <h2 class="register-title">Create an Account</h2>

        <form method="post" asp-action="Register" asp-controller="Account">
            <div class="mb-3">
                <label asp-for="FirstName" class="form-label"></label>
                <input asp-for="FirstName" class="form-control" placeholder="Enter your first name">
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="LastName" class="form-label"></label>
                <input asp-for="LastName" class="form-control" placeholder="Enter your last name">
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Username" class="form-label"></label>
                <input asp-for="Username" class="form-control" placeholder="Choose a username">
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control" placeholder="Enter your email address">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" class="form-control" placeholder="Choose a password">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="PhoneNumber" class="form-label"></label>
                <input asp-for="PhoneNumber" class="form-control" placeholder="Enter your phone number">
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Address" class="form-label"></label>
                <input asp-for="Address" class="form-control" placeholder="Enter your address">
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Register</button>
        </form>

        <div class="register-footer">
            <p>Already have an account? <a href="/Account/Login" class="register-link">Login here</a>.</p>
        </div>
    </div>
</div>

<!-- Enable Client-side Validation -->
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}