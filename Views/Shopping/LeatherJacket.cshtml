@{
    ViewData["Title"] = "Leather Jacket";
}
<style>
    /* Global Styles */
    body {
        background: linear-gradient(rgba(0, 0, 0, 0.85), rgba(40, 0, 0, 0.85)), url('https://thumbs.dreamstime.com/b/clothes-shop-8778849.jpg') center/cover no-repeat;
        background-attachment: fixed;
        font-family: 'Poppins', sans-serif;
        color: #fff;
    }

    /* Container */
    .container {
        margin-top: 60px;
        margin-bottom: 60px;
    }

    /* Product Image Section */
    .product-image {
        width: 100%;
        max-height: 500px;
        object-fit: contain;
        border: 2px solid #f1f1f1;
        border-radius: 10px;
    }

    /* Product Info Section */
    .product-info {
        padding: 30px;
        background: rgba(0, 0, 0, 0.7);
        border-radius: 10px;
        box-shadow: 0 8px 15px rgba(0, 0, 0, 0.5);
    }

        .product-info h2 {
            font-size: 36px;
            font-weight: bold;
            color: #ff4c4c;
        }

        .product-info h4 {
            color: #ff4c4c;
            font-weight: bold;
            font-size: 28px;
        }

        .product-info p {
            font-size: 16px;
            color: #fff;
            margin-bottom: 15px;
        }

    .list-group-item {
        background-color: #222;
        border: 1px solid #444;
        color: #fff;
    }

        .list-group-item strong {
            color: #ff4c4c;
        }

    /* Care Instructions Styling */
    .care-instructions ul {
        font-size: 14px;
        line-height: 1.6;
        color: #fff;
    }

    /* Back Button */
    .btn-back {
        background-color: #000;
        color: #fff;
        padding: 12px 20px;
        text-align: center;
        border-radius: 8px;
        border: 2px solid #ff4c4c;
    }

        .btn-back:hover {
            background-color: #ff4c4c;
            color: #fff;
            border-color: #ff4c4c;
        }

    /* Responsive Styling */
    @@media (max-width: 768px) {
        .product-info h2 {
            font-size: 28px;
        }

        .product-info h4 {
            font-size: 22px;
        }

        .product-info p {
            font-size: 14px;
        }

        .btn-back {
            font-size: 14px;
            padding: 10px;
        }
    }
</style>
<div class="container mt-5 mb-5">
    <div class="row">
        <!-- Product Image -->
        <div class="col-md-6">
            <img src="https://assets.ajio.com/medias/sys_master/root/20231209/PYit/65737fc5afa4cf41f5c0d7a9/-473Wx593H-466868325-navy-MODEL5.jpg"
                 alt="Leather Jacket"
                 class="img-fluid rounded shadow"
                 style="height: 500px; object-fit: cover;" />
        </div>

        <!-- Product Info -->
        <div class="col-md-6 d-flex flex-column justify-content-between">
            <div>
                <h2 class="mb-3">Leather Jacket</h2>
                <h4 class="text-success mb-3">₹899</h4>

                <p><strong>Description:</strong> A premium leather jacket designed for a rugged, stylish look. Perfect for both casual and semi-formal occasions.</p>

                <ul class="list-group list-group-flush mb-3">
                    <li class="list-group-item"><strong>Material:</strong> Genuine Leather</li>
                    <li class="list-group-item"><strong>Fit:</strong> Slim fit</li>
                    <li class="list-group-item"><strong>Color:</strong> Navy Blue</li>
                    <li class="list-group-item"><strong>Features:</strong> Zip closure, two front pockets, fully lined interior</li>
                    <li class="list-group-item"><strong>Sizes:</strong> M, L, XL</li>
                </ul>

                <div class="mb-3">
                    <strong>Care Instructions:</strong>
                    <ul>
                        <li>Dry clean only</li>
                        <li>Avoid contact with water</li>
                        <li>Store in a cool, dry place</li>
                    </ul>
                </div>
            </div>

            <!-- Navy Blue Back Button -->
            <div class="mt-4">
                <a href="/" class="btn btn-back w-100">← Back to Home</a>
            </div>
        </div>
    </div>
</div>
