@{
    ViewData["Title"] = "Buying Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    /* Red and Black Buying Page Theme */
    body {
        background: linear-gradient(rgba(0, 0, 0, 0.85), rgba(40, 0, 0, 0.8)), url('https://thumbs.dreamstime.com/b/clothes-shop-8778849.jpg') center/cover no-repeat;
        background-attachment: fixed;
        color: #e0e0e0;
        font-family: 'Poppins', sans-serif;
    }

    .buying-page-container {
        max-width: 600px;
        margin: 60px auto;
        padding: 30px;
        background: rgba(30, 30, 30, 0.7);
        backdrop-filter: blur(10px);
        border-radius: 15px;
        box-shadow: 0 8px 16px rgba(209, 0, 0, 0.3);
        border: 1px solid #333;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .buying-page-container:hover {
            transform: translateY(-5px);
            box-shadow: 0 12px 24px rgba(209, 0, 0, 0.4);
        }

    .buying-page-title {
        text-align: center;
        font-size: 30px;
        font-weight: bold;
        color: #ffffff;
        text-shadow: 0 2px 4px rgba(209, 0, 0, 0.3);
        margin-bottom: 25px;
    }

    .buying-form .form-label {
        font-weight: 600;
        color: #ffffff;
    }

    .buying-form .form-control {
        border: 1px solid #d10000;
        border-radius: 6px;
        padding: 12px;
        background-color: #1a1a1a;
        color: #ffffff;
        transition: border-color 0.3s ease, box-shadow 0.3s ease;
    }

        .buying-form .form-control:focus {
            border-color: #ff0000;
            box-shadow: 0 0 5px rgba(209, 0, 0, 0.4);
            outline: none;
        }

    .btn-primary {
        background: linear-gradient(135deg, #d10000, #b30000);
        border: none;
        color: white;
        font-size: 18px;
        font-weight: bold;
        text-transform: uppercase;
        padding: 12px;
        border-radius: 6px;
        transition: all 0.3s ease;
        box-shadow: 0 4px 8px rgba(209, 0, 0, 0.3);
    }

        .btn-primary:hover {
            background: linear-gradient(135deg, #ff0000, #d10000);
            transform: scale(1.05);
            box-shadow: 0 6px 12px rgba(209, 0, 0, 0.4);
        }

    .alert-success,
    .alert-danger {
        background-color: rgba(209, 0, 0, 0.2);
        border-color: #d10000;
        color: #ffffff;
        border-radius: 6px;
        text-align: center;
        font-weight: bold;
        padding: 12px;
    }

    @@media (max-width: 768px) {
        .buying-page-container

    {
        padding: 20px;
    }

    .btn-primary {
        font-size: 16px;
        padding: 10px;
    }

    }
</style>


<!-- Buying Page Content -->
<div class="buying-page-container">
    <h2 class="buying-page-title">Place Your Order</h2>

    <form asp-action="PlaceOrder" method="post" class="buying-form">
        <div class="mb-3">
            <label for="address" class="form-label">Address</label>
            <textarea class="form-control" id="address" name="address" rows="3" placeholder="Enter your address" required></textarea>
        </div>
        <div class="mb-3">
            <label for="phoneNumber" class="form-label">Phone Number</label>
            <input type="text" class="form-control" id="phoneNumber" name="phoneNumber"
                   placeholder="Enter your phone number"
                   required
                   pattern="^\d{10}$"
                   title="Phone number must be exactly 10 digits and contain only numbers.">
        </div>
        <button type="submit" class="btn btn-primary w-100">Place Order</button>
    </form>

    <!-- Success/Error Messages -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success mt-3">@TempData["SuccessMessage"]</div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger mt-3">@TempData["ErrorMessage"]</div>
    }
</div>
