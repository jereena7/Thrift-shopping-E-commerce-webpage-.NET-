@{
    ViewData["Title"] = "Order Confirmation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        background: linear-gradient(rgba(0, 0, 0, 0.85), rgba(40, 0, 0, 0.8)), url('https://thumbs.dreamstime.com/b/clothes-shop-8778849.jpg') center/cover no-repeat;
        background-attachment: fixed;
        font-family: 'Poppins', sans-serif;
        color: #f0f0f0;
    }

    .order-confirmation-container {
        max-width: 600px;
        margin: 60px auto;
        padding: 30px;
        background: rgba(30, 30, 30, 0.75);
        backdrop-filter: blur(10px);
        border-radius: 15px;
        box-shadow: 0 8px 20px rgba(255, 0, 0, 0.3);
        text-align: center;
        border: 1px solid #400000;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .order-confirmation-container:hover {
            transform: translateY(-5px);
            box-shadow: 0 12px 24px rgba(255, 0, 0, 0.4);
        }

    .order-confirmation-title {
        font-size: 30px;
        font-weight: bold;
        color: #ff4c4c;
        text-shadow: 0 2px 4px rgba(255, 0, 0, 0.3);
        margin-bottom: 20px;
    }

    .order-confirmation-container p {
        font-size: 18px;
        color: #f0f0f0;
        margin-bottom: 12px;
    }

    .btn-primary {
        background: linear-gradient(135deg, #d10000, #b30000);
        border: none;
        color: white;
        font-size: 18px;
        font-weight: bold;
        text-transform: uppercase;
        padding: 12px;
        border-radius: 6px;
        transition: all 0.3s ease;
        box-shadow: 0 4px 10px rgba(255, 0, 0, 0.4);
    }

        .btn-primary:hover {
            background: linear-gradient(135deg, #ff0000, #d10000);
            transform: scale(1.05);
            box-shadow: 0 6px 16px rgba(255, 0, 0, 0.5);
        }

    @@media (max-width: 768px) {
        .order-confirmation-container

    {
        padding: 20px;
    }

    .order-confirmation-container p {
        font-size: 16px;
    }

    .btn-primary {
        font-size: 16px;
        padding: 10px;
    }

    }
</style>


<!-- Order Confirmation Page Content -->
<div class="order-confirmation-container">
    <h2 class="order-confirmation-title">Thank You for Your Order! 🎉</h2>
    <p>Your payment has been processed successfully.</p>
    <p><strong>Estimated Delivery Date:</strong> @ViewBag.EstimatedDeliveryDate</p>
    <p>We will send you an email with the tracking details once your order is shipped.</p>

    <a asp-action="Index" class="btn btn-primary mt-3">Continue Shopping</a>
</div>
