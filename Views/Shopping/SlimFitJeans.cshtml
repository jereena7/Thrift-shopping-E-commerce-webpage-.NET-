@{
    ViewData["Title"] = "Slim Fit Jeans";
}

<style>
    /* Global Styles */
    body {
        background: linear-gradient(rgba(0, 0, 0, 0.85), rgba(40, 0, 0, 0.85)), url('https://thumbs.dreamstime.com/b/clothes-shop-8778849.jpg') center/cover no-repeat;
        background-attachment: fixed;
        font-family: 'Poppins', sans-serif;
        color: #fff;
    }

    /* Container */
    .container {
        margin-top: 60px;
        margin-bottom: 60px;
    }

    /* Product Image Section */
    .product-image {
        width: 100%;
        max-height: 500px;
        object-fit: contain;
        border: 2px solid #f1f1f1;
        border-radius: 10px;
    }

    /* Product Info Section */
    .product-info {
        padding: 30px;
        background: rgba(0, 0, 0, 0.7);
        border-radius: 10px;
        box-shadow: 0 8px 15px rgba(0, 0, 0, 0.5);
    }

        .product-info h2 {
            font-size: 36px;
            font-weight: bold;
            color: #ff4c4c;
        }

        .product-info h4 {
            color: #ff4c4c;
            font-weight: bold;
            font-size: 28px;
        }

        .product-info p {
            font-size: 16px;
            color: #fff;
            margin-bottom: 15px;
        }

    .list-group-item {
        background-color: #222;
        border: 1px solid #444;
        color: #fff;
    }

        .list-group-item strong {
            color: #ff4c4c;
        }

    /* Care Instructions Styling */
    .care-instructions ul {
        font-size: 14px;
        line-height: 1.6;
        color: #fff;
    }

    /* Back Button */
    .btn-back {
        background-color: #000;
        color: #fff;
        padding: 12px 20px;
        text-align: center;
        border-radius: 8px;
        border: 2px solid #ff4c4c;
    }

        .btn-back:hover {
            background-color: #ff4c4c;
            color: #fff;
            border-color: #ff4c4c;
        }

    /* Responsive Styling */
    @@media (max-width: 768px) {
        .product-info h2 {
            font-size: 28px;
        }

        .product-info h4 {
            font-size: 22px;
        }

        .product-info p {
            font-size: 14px;
        }

        .btn-back {
            font-size: 14px;
            padding: 10px;
        }
    }
</style>

   

<div class="container mt-5 mb-5">
    <div class="row">
        <!-- Image Section -->
        <div class="col-md-6 product-image-container">
            <img src="https://www.crossjeans.com/cdn/shop/files/E_161_300_cross_jeans_UD2024_1_1445x.jpg?v=1721726807"
                 alt="Slim Fit Jeans"
                 class="product-image" />
        </div>

        <!-- Info Section -->
        <div class="col-md-6 d-flex flex-column justify-content-between">
            <div class="product-info">
                <h2>Slim Fit Jeans</h2>
                <h4>₹499</h4>

                <p><strong>Description:</strong> These slim fit jeans are the perfect blend of comfort and style. Ideal for both casual and semi-formal looks, they complement every body type and occasion.</p>

                <ul class="list-group list-group-flush mb-3">
                    <li class="list-group-item"><strong>Material:</strong> 98% Cotton, 2% Elastane</li>
                    <li class="list-group-item"><strong>Fit:</strong> Slim Fit</li>
                    <li class="list-group-item"><strong>Color:</strong> Dark Blue</li>
                    <li class="list-group-item"><strong>Waist Rise:</strong> Mid Rise</li>
                    <li class="list-group-item"><strong>Closure:</strong> Button & Zipper</li>
                    <li class="list-group-item"><strong>Available Sizes:</strong> 28, 30, 32, 34, 36</li>
                </ul>

                <div class="care-instructions mb-3">
                    <strong>Care Instructions:</strong>
                    <ul>
                        <li>Machine wash cold with like colors</li>
                        <li>Do not bleach</li>
                        <li>Tumble dry low</li>
                        <li>Iron on low if needed</li>
                    </ul>
                </div>
            </div>

            <!-- Back Button -->
            <div class="mt-4">
                <a href="/" class="btn btn-back w-100">← Back to Store</a>
            </div>
        </div>
    </div>
</div>
