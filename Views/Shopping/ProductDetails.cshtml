@model ThriftShop.Models.ProductModel
@{
    ViewData["Title"] = "Product Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    /* Body background and font styling */
    body {
        background: linear-gradient(rgba(0, 0, 0, 0.85), rgba(40, 0, 0, 0.85)), url('https://thumbs.dreamstime.com/b/clothes-shop-8778849.jpg') center/cover no-repeat;
        background-attachment: fixed;
        font-family: 'Poppins', sans-serif;
        color: #fff;
    }

    /* Product Details Container */
    .product-details-container {
        max-width: 900px;
        margin: 60px auto;
        padding: 30px;
        background: rgba(255, 255, 255, 0.1); /* Glassmorphism */
        backdrop-filter: blur(10px);
        border-radius: 15px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.3);
    }

    .product-details-title {
        text-align: center;
        font-size: 30px;
        font-weight: bold;
        color: #ff4c4c;
        text-shadow: 0 2px 4px rgba(255, 0, 0, 0.3);
        margin-bottom: 20px;
    }

    /* Product Images Styling */
    .product-images img {
        width: 100%;
        height: auto;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    /* Product Information Styling */
    .product-info p {
        font-size: 16px;
        color: #fff;
        margin-bottom: 10px;
    }

    .product-info strong {
        color: #ff4c4c;
    }

    /* Select dropdown and button styling */
    .form-select, .btn {
        font-size: 16px;
        border-radius: 6px;
    }

    .btn-primary {
        background-color: #d10000;
        border: none;
        padding: 12px 20px;
        font-size: 18px;
        font-weight: bold;
        text-transform: uppercase;
        border-radius: 6px;
        transition: all 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #d10000;
            transform: scale(1.05);
        }

    /* Success/Error Messages */
    .alert {
        text-align: center;
        font-weight: bold;
    }

    /* Responsive Design for Mobile Devices */
    @@media (max-width: 768px) {
        .product-details-container

    {
        padding: 20px;
    }

    .product-details-title {
        font-size: 24px;
    }

    .product-info p {
        font-size: 14px;
    }

    .btn {
        font-size: 14px;
        padding: 10px;
    }

    .product-images img {
        max-width: 100%;
        margin-bottom: 15px;
    }

    }
</style>



<div class="product-details-container">
    <h2 class="product-details-title">@Model.ProductName</h2>

    <div class="row">
        <!-- Product Images -->
        <div class="col-md-6">
            <div class="product-images">
                @if (!string.IsNullOrEmpty(Model.ImagePaths))
                {
                    var imagePaths = Model.ImagePaths.Split(',');
                    foreach (var imagePath in imagePaths)
                    {
                        <img src="@imagePath" class="img-fluid mb-2" alt="@Model.ProductName" />
                    }
                }
                else
                {
                    <img src="/images/no-image.png" class="img-fluid" alt="No Image Available" />
                }
            </div>
        </div>

        <!-- Product Details -->
        <div class="col-md-6">
            <div class="product-info">
                <p><strong>Price:</strong> ₹@Model.Price</p>
                <p><strong>Stock Status:</strong> @Model.StockStatus</p>
                <p><strong>Sizes:</strong> @Model.Size</p>
                <p><strong>Quantity Available:</strong> @Model.Quantity</p>
                <p><strong>Product Heading:</strong> @Model.ProductHeading</p>
                <p><strong>Conditions:</strong> @Model.Conditions</p>
                <p><strong>Description:</strong> @Model.ProductDescription</p>

                <!-- Add to Cart Form -->
                <form asp-action="AddToCart" method="post" class="mt-3">
                    <input type="hidden" name="productId" value="@Model.ProductId" />
                    <div class="mb-3">
                        <label for="quantity" class="form-label">Select Quantity</label>
                        <select class="form-select" id="quantity" name="quantity" required>
                            @for (int i = 1; i <= Model.Quantity; i++)
                            {
                                <option value="@i">@i</option>
                            }
                        </select>
                    </div>
                    <button type="submit" class="btn btn-primary">Add to Cart</button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Success/Error Messages -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success mt-3">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger mt-3">@TempData["ErrorMessage"]</div>
}
