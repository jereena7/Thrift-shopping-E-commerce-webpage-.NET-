@model ThriftShop.Models.User
@{
    ViewData["Title"] = "Edit User";
}

<h2 class="edit-user-title">Edit User</h2>

<div class="edit-user-container">
    <form asp-action="EditUser">
        <input type="hidden" asp-for="UserId" />

        <div class="form-group">
            <label asp-for="FirstName" class="form-label"></label>
            <input asp-for="FirstName" class="form-control form-input" />
        </div>

        <div class="form-group">
            <label asp-for="LastName" class="form-label"></label>
            <input asp-for="LastName" class="form-control form-input" />
        </div>

        <div class="form-group">
            <label asp-for="Username" class="form-label"></label>
            <input asp-for="Username" class="form-control form-input" />
        </div>

        <div class="form-group">
            <label asp-for="UserRole" class="form-label"></label>
            <input asp-for="UserRole" class="form-control form-input" />
        </div>

        <button type="submit" class="btn btn-save">Save Changes</button>
        <a asp-action="ManageUsers" class="btn btn-cancel">Cancel</a>
    </form>
</div>

<style>
    body {
        background: linear-gradient(to bottom right, #0d0d0d, #1a1a1a);
        background-attachment: fixed;
        color: white;
        font-family: 'Segoe UI', sans-serif;
    }

    .edit-user-title {
        text-align: center;
        font-size: 30px;
        font-weight: bold;
        color: #ff4d4d;
        margin-top: 40px;
    }

    .edit-user-container {
        max-width: 600px;
        margin: 40px auto;
        padding: 30px;
        background: rgba(30, 30, 30, 0.9);
        border-radius: 15px;
        box-shadow: 0 8px 16px rgba(255, 0, 0, 0.2);
    }

    .form-label {
        font-weight: bold;
        color: #ffffff;
    }

    .form-input {
        background-color: rgba(255, 255, 255, 0.1);
        border: 1px solid #ff4d4d;
        color: white;
        border-radius: 6px;
        padding: 10px;
        margin-bottom: 15px;
        transition: border 0.3s ease, box-shadow 0.3s ease;
    }

        .form-input:focus {
            border-color: #ff1a1a;
            box-shadow: 0 0 6px rgba(255, 26, 26, 0.5);
            background-color: rgba(255, 255, 255, 0.15);
        }

    .btn {
        padding: 10px 20px;
        font-size: 16px;
        font-weight: bold;
        text-transform: uppercase;
        border-radius: 6px;
        border: none;
        transition: all 0.3s ease;
        margin-right: 10px;
    }

    .btn-save {
        background: linear-gradient(135deg, #ff4d4d, #990000);
        color: white;
    }

        .btn-save:hover {
            background: linear-gradient(135deg, #cc0000, #ff1a1a);
            transform: scale(1.05);
        }

    .btn-cancel {
        background: linear-gradient(135deg, #555, #333);
        color: white;
    }

        .btn-cancel:hover {
            background: linear-gradient(135deg, #333, #111);
            transform: scale(1.05);
        }

    @@media (max-width: 768px) {
        .edit-user-container

    {
        padding: 20px;
    }

    .btn {
        font-size: 14px;
        padding: 8px 16px;
    }

    .edit-user-title {
        font-size: 24px;
    }

    }
</style>
