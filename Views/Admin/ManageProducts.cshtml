@model List<ThriftShop.Models.ProductModel>
@{
    ViewData["Title"] = "Manage Products";
    
}

<style>
    body {
        background: linear-gradient(to right, #0d0d0d, #1a1a1a);
        color: white;
        font-family: 'Segoe UI', sans-serif;
    }

    .manage-products-container {
        max-width: 1000px;
        margin: 60px auto;
        padding: 30px;
        background: rgba(30, 30, 30, 0.95);
        border-radius: 15px;
        box-shadow: 0 8px 16px rgba(255, 0, 0, 0.2);
        text-align: center;
    }

    .manage-products-title {
        font-size: 30px;
        font-weight: bold;
        color: #ff4d4d;
        margin-bottom: 20px;
    }

    .table {
        width: 100%;
        border-collapse: collapse;
        color: white;
        background-color: rgba(0, 0, 0, 0.4);
    }

        .table thead {
            background-color: #b30000;
            color: white;
        }

        .table th,
        .table td {
            padding: 12px;
            border: 1px solid rgba(255, 255, 255, 0.1);
            text-align: center;
        }

        .table tbody tr:nth-child(even) {
            background-color: rgba(255, 255, 255, 0.05);
        }

        .table tbody tr:hover {
            background-color: rgba(255, 77, 77, 0.1);
        }

    .btn-primary, .btn-warning, .btn-danger {
        font-weight: bold;
        text-transform: uppercase;
        padding: 10px 15px;
        border-radius: 6px;
        transition: all 0.3s ease;
        color: white;
        border: none;
    }

    .btn-primary {
        background: linear-gradient(135deg, #d50000, #b71c1c);
    }

        .btn-primary:hover {
            background: linear-gradient(135deg, #b71c1c, #d50000);
            transform: scale(1.05);
        }

    .btn-warning {
        background: linear-gradient(135deg, #ff9800, #e65100);
    }

        .btn-warning:hover {
            background: linear-gradient(135deg, #e65100, #ff9800);
            transform: scale(1.05);
        }

    .btn-danger {
        background: linear-gradient(135deg, #dc3545, #9e0b0b);
    }

        .btn-danger:hover {
            background: linear-gradient(135deg, #9e0b0b, #dc3545);
            transform: scale(1.05);
        }

    .alert {
        font-weight: bold;
        margin: 20px 0;
        border-radius: 8px;
    }

    @@media (max-width: 768px) {
        .manage-products-container

    {
        padding: 20px;
    }

    .table th, .table td {
        font-size: 14px;
        padding: 8px;
    }

    .btn {
        font-size: 14px;
        padding: 8px;
    }

    .manage-products-title {
        font-size: 24px;
    }

    }
</style>

<div class="manage-products-container">
    <h2 class="manage-products-title">🛒 Manage Products</h2>

    <a asp-action="AddProduct" class="btn btn-primary mb-3">➕ Add New Product</a>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success text-center">✅ @TempData["SuccessMessage"]</div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger text-center">❌ @TempData["ErrorMessage"]</div>
    }

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Product Name</th>
                <th>Price</th>
                <th>Stock Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.ProductName</td>
                    <td>INR @product.Price</td>
                    <td>@product.StockStatus</td>
                    <td>
                        <a asp-action="EditProduct" asp-route-id="@product.ProductId" class="btn btn-sm btn-warning">✏️ Edit</a>
                        <form asp-action="DeleteProduct" method="post" style="display:inline;">
                            <input type="hidden" name="id" value="@product.ProductId" />
                            <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this product?');">🗑️ Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
